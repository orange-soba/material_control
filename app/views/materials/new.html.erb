<%= render 'shared/header' %>

<h1 class="function-title">材料登録</h1>

<%# 材料登録 %>
<div class="register-area">
  <%= form_with model: @material, url: materials_path, local: true do |f| %>
    <%# エラー情報を表示 %>
    <%# <div class="error-alert" id="error-messages-area" style="display:none;"> %>
      <%# <ul id="error-messages-lists"></ul> %>
      <%= render 'shared/error_messages', model: f.object %>
    <%# </div> %>
    <%# /エラー情報を表示 %>

    <div class="input-field">
      <%= f.label :material_type, "　材質：" %>
      <%= f.text_field :material_type, placeholder: "例) sus304", id: "part_name" %><br>
    </div>

    <div class="input-field">
      <%= f.label :category, "　種類：" %>
      <%= f.text_field :category, placeholder: "例) FB-C", id: "part_name" %><br>
    </div>

    <div class="input-field">
      <%= f.label :thickness, "　厚さ：" %>
      <%= f.text_field :thickness, placeholder: "例) 6", id: "part_name" %><br>
    </div>

    <div class="input-field">
      <%= f.label :width, "　　幅：" %>
      <%= f.text_field :width, placeholder: "例) 30", id: "part_name" %><br>
    </div>

    <div class="input-field">
      <%= f.label :option, "その他：" %>
      <%= f.text_field :option, placeholder: "例) 切断済み", id: "part_name" %><br>
    </div>

    <div class="input-field">
      <%= f.label :length, "　長さ：" %>
      <%= f.text_field :length, placeholder: "例) 5000", id: "part_name" %><br>
    </div>

    <div class="input-field">
      <%= f.label :stock, "在庫数：" %>
      <%= f.text_field :stock, placeholder: "在庫数", id: "part_name" %><br>
    </div>

    <%= f.submit "送信" %>
  <% end %>
</div>
<%# /材料登録 %>

<%# 登録履歴の表示 %>
<div class="history-area">
  <div class="history-title">登録履歴</div>
  <table>
    <thead>
      <tr>
        <th>材料</th>
        <th>在庫数</th>
        <th>登録日時</th>
      </tr>
    </thead>
    <tbody id="parts-history-data">
      <% @materials.each do |material| %>
        <tr>
          <td>
            <%= material.material_type %>/<%= material.category %>/<%= material/thickness %>/
            <%= material.width ||= "*" %>/
            <%= material.option ||= "*" %>/
            <%= material.length %>
          </td>
          <td class="parts-history-stock"><%= material.stock %></td>
          <td><%= l material.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%# /登録履歴の表示 %>