<h1 class="parts-register__title">完成品/部品登録</h1>

<%#= 完成品/部品登録 %>
<div class="register-area">
  <%= form_with model: @part, url: parts_path, local: true do |f| %>
    <%# エラー情報を表示 %>
    <%# /エラー情報を表示 %>

    <div class="input-field">
      <%= f.label :name, "完成品名/部品名：" %>
      <%= f.text_field :name, placeholder: "完成品名or部品名" %><br>
    </div>

    <div class="input-field">
      <%= f.label :stock, "在庫数：" %>
      <%= f.text_field :stock, class: "stock-input" , value: 0 %>
    </div>

    <div class="input-field">
      <%= f.check_box :finished %>
      <%= f.label :finished, "完成品の場合はチェックを入れてください" %>
    </div>

    <%= f.submit "登録" %>
  <% end %>
</div>
<%#= /完成品/部品登録 %>

<%#= 登録履歴の表示 %>
<div class="parts-history">
  <div class="history-title">登録履歴</div>
  <table>
    <thead>
      <tr>
        <th>完成品名/部品名</th>
        <th>在庫数</th>
        <th>製品種別</th>
        <th>登録日時</th>
      </tr>
    </thead>
    <tbody>
      <% @parts.each do |part| %>
        <tr>
          <td><%= part.name %></td>
          <td class="parts-history-stock"><%= part.stock %></td>
          <% if part.finished? %>
            <td>完成品</td>
          <% else %>
            <td>部品</td>
          <% end %>
          <td><%= l part.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%#= /登録履歴の表示 %>