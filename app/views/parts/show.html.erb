<%= render 'shared/header' %>

<h1 class="function-title">完成品/部品詳細画面</h2>

<%# 完成品/部品詳細の表示 %>
<div class="show-detail-area">
  <table class="history-area-details">
    <tr>
      <% if @part.finished? %>
        <th>完成品名</th>
      <% else %>
        <th>部品名</th>
      <% end %>
      <td class="history-area__data"><%= @part.name %></td>
    </tr>
    <tr>
      <th>在庫数</th>
      <td class="history-area__data"><%= @part.stock %></td>
    </tr>
    <tr>
      <th>登録日時</th>
      <td class="history-area__data"><%= l @part.created_at %></td>
    </tr>
  </table>

  <%# 完成品/部品作成に必要な材料の計算結果を表示するリンク %>
  <div class="button-link">
    <%= link_to "材料計算", "#" %>
  </div>
  <%# /完成品/部品作成に必要な材料の計算結果を表示するリンク %>
</div>
<%# /完成品/部品詳細の表示 %>

<%# 完成品/部品作成に必要な部品及び材料の表示 %>
<div class="show-detail-area">
  <%# 必要な部品の表示 %>
  <div class="need-area">
    必要な部品の表示
    <%= link_to '部品登録', '#' %>
  </div>
  <%# /必要な部品の表示 %>

  <%# 必要な材料の表示 %>
  <div class="need-area">
    必要な材料の表示
    <%= link_to '材料登録', '#' %>
  </div>
  <%# /必要な材料の表示 %>
</div>
<%# /完成品/部品作成に必要な部品及び材料の表示 %>